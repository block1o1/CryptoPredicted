<!DOCTYPE html>
<html>
<head>

  <title>CryptoPredicted</title>
  
  <%- include('/home/cryptopredicted/PWA/server/views/parts2/head') %>
  <%- include('/home/cryptopredicted/PWA/server/views/parts2/header_scripts') %>


</head>
<body class="inner">
  <!-- main container of all the page elements -->
  <div id="wrapper">
    <!-- header of the page -->
    <header id="header">
      <div class="container">
        <div class="inner-container">
          <a href="#" onclick="cp_backButton('/');return false;" class="btn-back"><span class="icon-arrow2"></span></a>
          <strong class="title">Sign up</strong>
        </div>
      </div>
    </header>
    <!-- contain main informative part of the site -->
    <main id="main">
      <!-- login block -->
      <section class="login-block">
        <div class="container">

          <ul class="steps">
            <li class="active"></li>
            <li></li>
          </ul>

          <div class="sub-container">
            
            <form class="form" method="POST" action="signup">
              <div class="form-group name input-focused">
                <label for="rel01">Name</label>
                <input class="form-control" type="text" name="name" id="rel01" <% if (typeof name !== 'undefined') { %> value="<%= name %>" <% } %> >
              </div>
              <div class="form-group email input-focused">
                <label for="rel02">Email</label>
                <input class="form-control" type="email" name="email" id="rel02" <% if (typeof email !== 'undefined') { %> value="<%= email %>" <% } %> >
              </div>
              <div class="form-group password input-focused">
                <label for="rel03">Password</label>
                <input class="form-control" type="password" name="password" id="rel03" <% if (typeof pass !== 'undefined') { %> value="<%= pass %>" <% } %> >
              </div>

              <div class="form-group">
                <span style="color: white; font-weight: 1000;"> <% if (typeof err !== 'undefined') { %> <%= "Error: " + err %> <% } %> </span>
              </div>

              <!-- <div class="btn-holder" style="background:none; padding:20px 0px 0px 0px;">
                <div class="container">
                  <button type="submit" class="btn-next" style="color: white; border: 1px solid white; background: none;"></button>
                </div>
              </div> -->
              <div class="btn-holder" style="background:none; padding:20px 0px 0px 0px;">
                <div class="container">
                  <button type="submit" class="btn-next bg" style="color: white; cursor: pointer;"></button>
                </div>
                <div class="container">
                  
                  <p class="d-md-block" style="margin:20px 0px 0px 0px; color:white; opacity: .8;">By signing up you agree to our <a href="terms" target="_blank">terms and conditions</a> and <a href="privacy" target="_blank">privacy policy</a>.</p>
                </div>
              </div>

              <div class="form-group" style="text-align: center; margin-top:30px;">
                <span ><a style="color: white; " href="login"> Already registered? Login <u>here</u>. </a></span>
              </div>

            </form>

            </div>

          </div>
        </div>
      </section>
    </main>
    <!-- footer of the page -->
    <%- include('/home/cryptopredicted/PWA/server/views/parts2/footer_white') %>
  </div>
</body>
</html>
